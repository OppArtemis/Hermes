<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrey"
    tools:context=".SigninActivity">
    <TextView
        android:id="@+id/user_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:text="@string/user_profile"
        android:textSize="13dp"
        android:textColor="@color/colorBlack"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/user_profile"
        android:text="@string/user_name"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/colorSlateBlue"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/location_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/location_info"
        android:textSize="15dp"
        android:textColor="@color/colorSlateBlue"/>

    <Button
        android:id="@+id/view_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:background="@color/colorSlateBlue"
        android:text="@string/view_map"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/update_location"
        android:layout_alignLeft="@+id/update_location"
        android:layout_alignStart="@+id/update_location" />

    <Button
        android:id="@+id/update_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:background="@color/colorSlateBlue"
        android:text="@string/update_location"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/location_info"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/button_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/sign_out"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorSlateBlue"
            android:text="@string/logout"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="3dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/delete_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/colorSlateBlue"
            android:text="@string/delete_user"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/custom_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/custom_message" />
</RelativeLayout>